extends layout

block content
  .container-fluid.d-flex.flex-column.align-items-center.min-vh-100.justify-content-center.gap-3
    h1 Posts
    if posts
      each post in posts
       .card.w-50
        .card-body
          h5.card-title #{post.title}
          p.card-text #{post.text}
          a.card-link(href=post.user.url) #{post.user.fullName}
          a.card-link(href="#") Delete
    else 
      p No posts.
        